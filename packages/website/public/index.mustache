<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" href="/g/personalidol/assets/favicon.ico?{{{__CACHE_BUST}}}">
    <link rel="manifest" href="/g/personalidol/manifest.json?{{{__CACHE_BUST}}}">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#000000">
    <title>Personal Idol</title>
    <style>
      ::selection {
        background-color: white;
        color: black;
      }

      html, body {
        touch-action: none;
        -webkit-user-select: none;
        user-select: none;
      }

      body,
      #canvas-root,
      #game-root,
      #ui-root {
        bottom: 0;
        left: 0;
        position: absolute;
        top: 0;
        right: 0;
      }

      body {
        -moz-osx-font-smoothing: grayscale;
        -webkit-font-smoothing: antialiased;
        background-color: black;
        margin: 0;
        overflow: hidden;
      }

      #canvas {
        height: 100%;
        width: 100%;
        will-change: height, width;
      }

      .ui-placeholder.ui-placeholder--loading {
        bottom: 2.4rem;
        color: white;
        font-family: sans-serif;
        font-size: 1rem;
        font-variant: small-caps;
        letter-spacing: 0.1ch;
        left: 1.6rem;
        line-height: 1rem;
        position: absolute;
        text-align: center;
        text-transform: lowercase;
      }

      .ui-placeholder-label.ui-placeholder-label--disabled {
        display: none;
      }

      #ui-root {
        -webkit-font-kerning: normal;
        font-kerning: normal;
        font-kerning: normal;
        pointer-events: none;
      }
    </style>
  </head>
  <body>
    <div id="game-root">
      <div id="canvas-root">
        <canvas id="canvas"></canvas>
      </div>
      <div id="ui-root">
        <pi-progress-manager-state class="ui-placeholder ui-placeholder--loading" id="ui-placeholder">
          <div class="ui-placeholder-label ui-placeholder-label--disabled" id="ui-placeholder-label">
            Loading ...
          </div>
          <noscript>
            You need to enable JavaScript in your browser to use this
            application.
          </noscript>
        </pi-progress-manager-state>
      </div>
    </div>
    <script>(function () {
      let _domControllerReady = false;
      let _fatalError = null;
      let _version = 0;

      const _uiRoot = document.getElementById("ui-root");

      function _onLoadingError(evt) {
        _fatalError = evt.detail;
        _renderError(_fatalError.message);
      }

      function _onLoadingProgress(evt) {
        if (_fatalError) {
          return;
        }

        const _uiPlaceholder = document.getElementById("ui-placeholder");

        if (evt.detail.isDOMControllerReady) {
          _domControllerReady = true;
          _uiPlaceholder.classList.remove("ui-placeholder--loading");
        }

        if (!_domControllerReady) {
          return;
        }

        _version += 1;
        _uiPlaceholder.progressManagerState = {
          errors: [],
          expect: 1,
          messages: [
            {
              id: "-",
              loaded: evt.detail.step,
              total: evt.detail.totalSteps,
              type: evt.detail.type,
              uri: "",
            },
          ],
          version: _version,
        };
      }

      function _renderError(message) {
        document.body.style.backgroundColor = "darkred";

        _uiRoot.innerHTML = `
          <div class="ui-placeholder ui-placeholder--loading" id="ui-placeholder">
            <div class="ui-placeholder-label" id="ui-placeholder-label">Error: ${message}</div>
          </div>
        `;
      }

      const _uiPlaceholderLabel = document.getElementById("ui-placeholder-label");

      _uiPlaceholderLabel.classList.remove("ui-placeholder-label--disabled");
      _uiPlaceholderLabel.textContent = "Loading game engine ...";

      if (!navigator.serviceWorker) {
        return void _renderError("this app needs to run under SSL and support service workers");
      }

      const _script = document.createElement("script");

      _script.setAttribute("src", "/g/personalidol/lib/index.js?{{{__CACHE_BUST}}}");
      _script.setAttribute("type", "module");

      document.body.appendChild(_script);

      _uiRoot.addEventListener("loading", _onLoadingProgress);
      _uiRoot.addEventListener("error", _onLoadingError);
    }());</script>
    <script src="/g/personalidol/lib/index.js?{{{__CACHE_BUST}}}" type="module"></script>
  </body>
</html>

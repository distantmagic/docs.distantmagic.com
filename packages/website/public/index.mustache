<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="icon" href="/g/personalidol/assets/favicon.ico?{{{__CACHE_BUST}}}">
    <link rel="manifest" href="/g/personalidol/manifest.json?{{{__CACHE_BUST}}}">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#000000">
    <title>Personal Idol</title>
    <style>
      ::selection {
        background-color: white;
        color: black;
      }

      html, body {
        touch-action: none;
        -webkit-user-select: none;
        user-select: none;
      }

      body,
      #canvas-root,
      #game-root,
      #ui-root {
        bottom: 0;
        left: 0;
        position: absolute;
        top: 0;
        right: 0;
      }

      body {
        -moz-osx-font-smoothing: grayscale;
        -webkit-font-smoothing: antialiased;
        background-color: black;
        margin: 0;
        overflow: hidden;
      }

      #canvas {
        height: 100%;
        width: 100%;
        will-change: height, width;
      }

      .ui-placeholder.ui-placeholder--loading {
        bottom: 2.4rem;
        color: white;
        font-family: sans-serif;
        font-size: 1rem;
        font-variant: small-caps;
        letter-spacing: 0.1ch;
        left: 1.6rem;
        line-height: 1rem;
        position: absolute;
        text-align: center;
        text-transform: lowercase;
      }

      .ui-placeholder-label.ui-placeholder-label--disabled {
        display: none;
      }

      #ui-root {
        -webkit-font-kerning: normal;
        font-kerning: normal;
        font-kerning: normal;
        pointer-events: none;
      }
    </style>
  </head>
  <body>
    <div id="game-root">
      <div id="canvas-root">
        <canvas id="canvas"></canvas>
      </div>
      <div id="ui-root">
        <pi-loading-screen class="ui-placeholder ui-placeholder--loading" id="ui-placeholder">
          <div class="ui-placeholder-label ui-placeholder-label--disabled" id="ui-placeholder-label">
            Loading ...
          </div>
          <noscript>
            You need to enable JavaScript in your browser to use this
            application.
          </noscript>
        </pi-loading-screen>
      </div>
    </div>
    <script>(function () {
      const _uiPlaceholderLabel = document.getElementById("ui-placeholder-label");

      _uiPlaceholderLabel.classList.remove("ui-placeholder-label--disabled");

      if (!navigator.serviceWorker) {
        document.body.style.backgroundColor = "darkred";
        _uiPlaceholderLabel.textContent = "Error: this app needs to be run under SSL.";

        return;
      }

      const _script = document.createElement("script");

      _script.setAttribute("src", "/g/personalidol/lib/index.js?{{{__CACHE_BUST}}}");
      _script.setAttribute("type", "module");

      document.body.appendChild(_script);

      const _uiPlaceholder = document.getElementById("ui-placeholder");
      const _uiRoot = document.getElementById("ui-root");

      let _domControllerReady = false;

      _uiPlaceholderLabel.textContent = "Loading game engine ...";

      function _onLoadingProgress(evt) {
        if (evt.detail.isDOMControllerReady) {
          _domControllerReady = true;
          _uiPlaceholder.classList.remove("ui-placeholder--loading");
        }

        if (!_domControllerReady) {
          return;
        }

        _uiPlaceholder.setAttribute("comment", `ui:loading_accusative_${evt.detail.type}`);
        _uiPlaceholder.setAttribute("progress", evt.detail.step / evt.detail.totalSteps);
      }

      _uiRoot.addEventListener("loading", _onLoadingProgress);
    }());</script>
    <script src="/g/personalidol/lib/index.js?{{{__CACHE_BUST}}}" type="module"></script>
  </body>
</html>
